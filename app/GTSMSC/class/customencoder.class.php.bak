<?php
/**
 * Custom Encoder
 * @author judparfait@gmail.com
 */
class CustomEncoder
{
	
	/**
	 * Encode Accented characters
	 *
	 * @param string $string
	 * @return string
	 */
	public static function encode_accented_chars($string)
	{
		$dict = array(
			'è' => "e", 'é' => "e", 'ù' => "u", 'ì' => "i", 'ò' => "o", 'Ç' => "c", 'É' => "E", 'à' => "a"
		);
		$converted = strtr($string, $dict);
		return $converted;
	}
}